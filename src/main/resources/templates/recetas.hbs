{{# partial "titulo" }}	
	<title>Recetas - QueComemos.me</title>
{{/partial}}
		
{{# partial "contenido" }}	

<form action="/recetas" >
  <div class="row">
	  <div class="col-md-7">
	  	  <label for="nombre">Nombre</label>
		  <input type="text" class="form-control" name="nombre">
		  
		  <label for="cantCalorias">Cantidad de Calorias</label>
		  <input type="text" class="form-control" name="cantCalorias">
		  
		  <label for="dificultad">Dificultad</label>
		  <input type="text" class="form-control" name="dificultad">
		</div>
		<div class="col-md-2">
		  <input type="submit" class="form-control btn btn-default">
		</div>
  </div>
</form>

<div class="row">
	<div class="col-md-12">	
	<table class="table table-striped" >
			<td>Nombre</td>
			<td>Calorias</td>
			<td>Dificultad</td>
		</hr>
	{{#recetas}}
		<tr>
			<td>{{Nombre}}</td>
			<td>{{CantCaloriasTotales}}</td>
			<td>{{Dificultad}}</td>
		</tr>
	{{/recetas}}				
	</table>
	</div>
</div>


{{/partial}}
				
