{{# partial "titulo" }}	
	<title>Detalle De Receta</title>
{{/partial}}
		
{{# partial "contenido" }}	
<br><div class="container">
	<div class="row">
		<div class="col-md-12">
	 		<div class="col-md-8">
			 	<h1> {{receta.Nombre}} </h1> 
			</div>	
	 		<div class="col-md-4" style="position: absolute; bottom: 0; right: 0;">
				<div class="pull-right">
					<div style="display: block">
						<h4> 
							{{#if publica}}
								Receta de dominio Público
							{{else}}
								Autor: {{autor.Nombre}}
							{{/if}}		 	
						</h4>
					</div>
					<div style="display: block">						
						<form id="favform" method="POST" action="/recetas/{{receta.id}}/favorita" style="display: inline;">
							{{#if favorita}}
								<input type="hidden" name="value" value="false">
							{{else}}
								<input type="hidden" name="value" value="true">
							{{/if}}
							<button type="submit" form="favform" style="display: inline; margin-left: 2px;" type="button" class="btn btn-default btn-lg" >
								{{#if favorita}}
									<span style="color: #0055FF" class="glyphicon glyphicon-star" aria-hidden="true"></span> Soy tu Favorita!
								{{else}}
									<span style="color: #002060" class="glyphicon glyphicon-star-empty" aria-hidden="true"></span> Marcame como Favorita!
								{{/if}}	  								
							</button>								
						</form>							 		
					</div> 
				</div>
			</div>
		</div>	
	</div>
	<div class="row">
		<hr>
	</div>		
	<div class="row" style="display: flex; align-items: center;">
		<div class="col-md-6">
			<div class="row">
				<h3 style="display: inline"> Temporada: </h3>
				<h4 style="display: inline; margin-left: 10px" > {{receta.Temporada.PrettyName}} </h4> 
 			</div>
			<div class="row" style="margin-top: 15px">
				<h3 style="display: inline"> Aporte Calórico: </h3>
				<h4 style="display: inline; margin-left: 10px" > {{receta.CantCaloriasTotales}} </h4> 
			</div>
			<div class="row" style="margin-top: 15px">
				<h3 style="display: inline"> Dificultad: </h3>
				<h4 style="display: inline; margin-left: 10px" > {{receta.Dificultad.PrettyName}} </h4> 
			</div>
			<div class="row">
				{{#if inadecuado}}
					<h3> Inadecuado para:</h3>
					<div class="col-md-1">
					</div>	
					<div class="col-md-8" style="margin-left: 5px">
						<ul class="list-group">
						  {{#each condicionesInadecuado}}
							  <li class="list-group-item" style="text-align: center;">{{this.Nombre}}</li>
						  {{/each}}
						</ul>
					</div>
				{{/if}}	
			</div>
		</div>
		<div class="col-md-6 pull-right">
			{{#if hasPhoto}}
				<img src="{{receta.UrlImagen}}" class="img-rounded img-responsive" alt="{{Nombre}}">
			{{else}}
				<img src="http://aerostatiksolution.com/wp-content/uploads/2015/01/black-white.png" class="img-rounded img-responsive" alt="{{Nombre}}">
			{{/if}}
		</div>
	</div>
	<div class="row">
		<hr>
	</div>	
	<div class="row">
		<div class="col-md-6">
			<h3> Ingredientes:</h3>
			<div class="col-md-10" style="margin-left: 5px">
				<ul class="list-group">
				  {{#each receta.IngredientesTotales}}
					  <li class="list-group-item">{{this.Nombre}}</li>
				  {{/each}}
				</ul>
			</div>
		</div>
		<div class="col-md-6">
			<h3> Condimentaciones:</h3>
		  	<table class="table table-striped">
			    <thead>
			      <tr>
			        <th>Condimento</th>
			        <th>Cantidad (en gramos)</th>
			      </tr>
			    </thead>
			    <tbody>
				  	{{#each receta.CondimentacionesTotales}}
		      			<tr>
					        <td>{{this.Condimento}}</td>
					        <td>{{this.Cantidad}}</td>
				      	</tr>
				 	{{/each}}
			    </tbody>
		  	</table>
		</div>
	</div>
	<div class="row">
		<hr>
	</div>	
	<div class="row">
		<div class="row">
			<div class="col-md-1" >
			</div>
			<div class="col-md-10">
				<h2> Instrucciones de Preparación:</h2>
			</div>
			<div class="col-md-1" >
			</div>
		</div>	
		<div class="row">
			<div class="col-md-2" >
			</div>
			<div class="col-md-8">
				<p>{{receta.Preparacion}}</p>
			</div>
			<div class="col-md-2">
			</div>	
		</div>	
	</div>	
	<br>
	<div class="row">
	
		<a class="btn btn-primary btn-lg pull-right" href="/recetas/{{receta.id}}/edit">
			<span style="margin-right: 5px" class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Editame
		</a>
	</div>	

	<hr>		
</div>
{{/partial}}
				
{{> layout.hbs }}