{{# partial "titulo" }}	
	<title>{{usuario.Nombre}}</title>
{{/partial}}
		
{{# partial "contenido" }}	  

<div class="container">

	<div class="row">	     
		<div class="col-md-3">
			<div class="row">
				<h2><b> {{usuario.Nombre}}</b> </h2>
		 	</div>
		  	<br>
			
			<blockquote>
		    	<h4><b> Sexo <small> {{usuario.Sexo}}</small> </b></h4>
				
				<hr> 
				<h4><b> Fecha de Nacimiento <small> {{fecha}}</small> </b> </h4>
			
		 		<hr>
		 		<h4><b> Altura <small> {{usuario.Estatura}}</small></b></h4>
			
		    	<hr>
		    	<h4><b> Complexion  <small> {{usuario.Peso}}</small></b> </h4>

				<hr>
				<h4><b> Peso <small> {{usuario.Peso}}</small> </b></h4>
			
				<hr>
				<h4>
					<b>IMC <small> {{usuario.IMC}}  </small>
			 		<small>Estado: {{estado}} </small></b>
			 	</h4>
			
				<hr>
				<h4> <b> Rutina <small> {{usuario.Rutina}}</small> </b></h4>
			
				<hr>
				<h4>
					<b>Condiciones De Salud
			  			{{#each usuario.CondicionesDeSalud}}
			  				<small>{{this.Nombre}}</small>
						{{/each}}
			 		</b>
			 	</h4>
			</blockquote>	
		</div>

		<div class="col-md-8">
			<div class="row">
				<br><br><br><br>
			</div>
			<div class="row">
				<div class="col-md-6">
					<h4><b>Ingredientes que te gustan:</b> </h4>
					<div class="col-md-10">
						<select multiple class="form-control">
						{{#gustos}}
							<option>{{Nombre}}</option>
						{{/gustos}}
						</select>
					</div>
				</div>	
				
				<div class="col-md-6">
					<h4><b>Ingredientes que detestas: </b></h4>
					<div class="col-md-10">
						<select multiple class="form-control">
				  			{{#disgustos}}
				  			<option>{{Nombre}}</option>
				  	        {{/disgustos}}
						</select>
					</div>
				</div>		 
			</div>
			<hr>
			<div class="col-md-12">
				<h4><b> Recetas Favoritas</b></h4>
				<div class="col-md-1">
				</div>	
				<div class="col-md-8">
					<div class="list-group">
					  {{#each recetasFavoritas}}
						  <a class="list-group-item" href="/recetas/{{Id}}/show" style="text-align: center;">{{this.Nombre}}</a>
					  {{/each}}
					</div>
				</div>
			</div>	
			<hr>
			<div class="row">	
				<h3 class="text-left">No sabes que comer?</h3>
				<h4 class="text-left">Busca las recetas que quieras, en base a tus necesidades y criterios</h4>
			 	<a class="btn btn-default btn-sm pull-right"  href="/recetas">
					<span class="glyphicon glyphicon-search"></span> Realiza tu consulta ahora
			 	</a>
		 	</div>	
		</div>
	</div>	
</div>


{{/partial}}			
			
				
{{> layout.hbs }}
